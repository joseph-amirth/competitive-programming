int d[N][N];

void BellmanFord(int s) {
    fill(d, d + n + 1, inf);
    d[s][0] = 0;

    for (int i = 1; i < n; i++) {
        for (int j = 1; j <= n; j++) {
            d[j][i] = d[j][i-1];
            for (auto &x : g[j]) {
                d[j][i] = min(d[j][i], d[x.first][i-1] + x.second);
            }
        }
    }
}
